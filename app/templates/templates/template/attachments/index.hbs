<div class="row">
  <div class="col-sm-8 col-xs-12">
    <h2 class="ellipsis">
      {{model.name}}
      <br>
      <small>{{when-empty model.description "No description"}}</small>
    </h2>
  </div>
  <div class="col-sm-4 col-xs-12">
    <h2>
      {{#link-to "templates.template.attachments.new" class="btn btn-primary pull-right-sm"}}New attachment{{/link-to}}
    </h2>
  </div>
</div>
<hr>
<ul class="nav nav-tabs">
  {{#link-to "templates.template.index" tagName="li"}}<a href>E-mail</a>{{/link-to}}
  {{#link-to "templates.template.goals" tagName="li"}}<a href>Goals</a>{{/link-to}}
  {{#link-to "templates.template.resources" tagName="li"}}<a href>Resources</a>{{/link-to}}
  {{#link-to "templates.template.attachments" tagName="li"}}<a href>Attachments</a>{{/link-to}}
</ul>
<table class="table table-hover">
  <thead>
    <tr>
      <th class="col-sm-4 col-xs-5">Name</th>
      <th class="col-sm-4 col-xs-5">Resource</th>
      <th class="col-sm-3 hidden-xs">File name</th>
      <th class="col-sm-1 col-xs-2 text-center">Actions</th>
    </tr>
  </thead>
  <tbody>
  {{#each (persisted-records model.attachments) as |attachment|}}
    <tr>
      <td class="col-sm-4 col-xs-5">{{attachment.name}}</td>
      <td class="col-sm-4 col-xs-5">{{attachment.resource.name}}</td>
      <td class="col-sm-3 hidden-xs text-mono">{{when-empty attachment.filename "None"}}</td>
      <td class="col-sm-1 col-xs-2 text-center">
        {{#link-to "templates.template.attachments.attachment.edit" attachment}}{{fa-icon "edit"}}{{/link-to}}
        {{#link-to "templates.template.attachments.attachment.delete" attachment}}{{fa-icon "trash"}}{{/link-to}}
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>
