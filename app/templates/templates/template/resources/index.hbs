<div class="row">
  <div class="col-sm-8 col-xs-12">
    <h2 class="ellipsis">
      {{model.name}}
      <br>
      <small>{{when-empty model.description "No description"}}</small>
    </h2>
  </div>
  <div class="col-sm-4 col-xs-12">
    <h2>
      {{#link-to "templates.template.resources.new" class="btn btn-primary pull-right-sm"}}New resource{{/link-to}}
    </h2>
  </div>
</div>
<hr>
<ul class="nav nav-tabs">
  {{#link-to "templates.template.index" tagName="li"}}<a href>E-mail</a>{{/link-to}}
  {{#link-to "templates.template.goals" tagName="li"}}<a href>Goals</a>{{/link-to}}
  {{#link-to "templates.template.resources" tagName="li"}}<a href>Resources</a>{{/link-to}}
  {{#link-to "templates.template.attachments" tagName="li"}}<a href>Attachments</a>{{/link-to}}
</ul>
<table class="table table-hover">
  <thead>
    <tr>
      <th class="col-md-4 col-sm-5 col-xs-7">Name</th>
      <th class="col-md-4 hidden-sm hidden-xs">Description</th>
      <th class="col-md-1 col-sm-2 col-xs-2">Type</th>
      <th class="col-md-2 col-sm-3 hidden-xs">Code</th>
      <th class="col-md-1 col-sm-2 col-xs-3 text-center">Actions</th>
    </tr>
  </thead>
  <tbody>
  {{#each (persisted-records model.resources) as |resource|}}
    <tr>
      <td class="col-md-4 col-sm-5 col-xs-7">{{resource.name}}</td>
      <td class="col-md-4 hidden-sm hidden-xs">{{when-empty resource.description "None"}}</td>
      <td class="col-md-1 col-sm-2 col-xs-2"><span class="label {{resource-type-class resource.type}}">{{resource.type}}</span></td>
      <td class="col-md-2 col-sm-3 hidden-xs text-mono">{{resource.code}}</td>
      <td class="col-md-1 col-sm-2 col-xs-3 text-center">
        {{#link-to "templates.template.resources.resource.upload" resource}}{{fa-icon "upload"}}{{/link-to}}
        {{#link-to "templates.template.resources.resource.edit" resource}}{{fa-icon "edit"}}{{/link-to}}
        <a href={{resource.downloadUrl}} target="_blank">{{fa-icon "cloud-download"}}</a>
        {{#link-to "templates.template.resources.resource.delete" resource}}{{fa-icon "trash"}}{{/link-to}}
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>
